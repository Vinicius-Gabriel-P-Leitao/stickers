<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/invalid_sticker_preview"
        android:layout_width="@dimen/sticker_pack_details_image_size"
        android:layout_height="@dimen/sticker_pack_details_image_size"
        android:contentDescription="@string/preview_sticker_description"
        android:padding="@dimen/sticker_pack_details_image_padding"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/error_invalid_sticker"
            android:textColor="@color/catppuccin_lavender"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_fix_invalid"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_rounded_button_open_gallery"
        android:backgroundTint="@color/catppuccin_surface1"
        android:contentDescription="@string/dialog_fix_sticker_pack"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_build_24dp"
        app:tint="@color/catppuccin_text" />
</LinearLayout>
